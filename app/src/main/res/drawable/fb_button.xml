<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="#5a89ec"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="2dp" android:right="2dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#738fca"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="2dp" android:right="2dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#9cbbfd"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="2dp" android:right="2dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

</selector>